<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/radioGroup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:layout_gravity="center_horizontal"
    tools:context=".ui.fragments.settings.SettingsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_measurement_format"
        />

    <RadioButton android:id="@+id/rb_standard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_standard_metric"
        android:layout_gravity="center"/>

    <RadioButton
        android:id="@+id/rb_metric"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/text_metric" />
    <RadioButton android:id="@+id/rb_imperial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/text_imperial_metric"/>

</RadioGroup>